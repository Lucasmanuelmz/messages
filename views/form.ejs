<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Message Table</title>
    <link href="./output.css" rel="stylesheet">
    <style>
        /* Estilo adicional para ajustar a altura da lista de mensagens */
        .message-container {
            max-height: 400px; /* Altura máxima da lista de mensagens */
            overflow-y: auto; /* Rolagem vertical */
        }
    </style>
</head>
<body class="bg-gray-100">
  <div class="container mx-auto max-w-lg px-4 py-8 fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
    <h2 class="text-xl font-bold mb-4 text-gray-800">Messages</h2>
    
    <!-- Container para mensagens com altura máxima e rolagem -->
    <div class="message-container rounded-lg bg-white shadow-md overflow-hidden">
      <% messages.forEach(message => { %>
        <div class="message px-4 py-2 bg-green-100 mb-2 rounded-lg">
          <p class="text-sm font-semibold text-green-800"><%= message.user %></p>
          <p class="text-sm text-green-900"><%= message.text %></p>
          <p class="text-xs text-right text-gray-500"><%= message.createdAt.getSeconds() %></p>
        </div>
      <% }) %>
    </div>

    <form class="mt-4 flex flex-col bg-white rounded-lg shadow-md p-4">
      <div class="relative mt-2 rounded-md shadow-sm">
        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
          <label for="user" class="text-gray-500 sm:text-sm">Name:</label>
        </div>
        <input type="text" name="user" id="user" class="block w-full rounded-md border-0 py-1.5 pl-16 pr-20 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
      </div>

      <label for="about" class="block mt-2 text-sm font-medium leading-6 text-gray-600">Message</label>
      <textarea id="text" name="text" rows="3" placeholder="Message" class="block w-full rounded-md border-0 py-1.5 pl-4 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"></textarea>

      <div class="mt-4 flex items-center justify-end">
        <button type="submit" class="rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600">Send</button>
      </div>
    </form>
  </div>

  <!-- Script para rolar automaticamente para o final da lista de mensagens -->
  <script>
    // Seleciona o elemento que contém as mensagens
    const messageContainer = document.querySelector('.message-container');
    
    // Rola para o final da lista de mensagens
    messageContainer.scrollTop = messageContainer.scrollHeight;
  </script>
</body>
</html>
